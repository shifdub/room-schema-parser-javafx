<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.Button?>

<GridPane
  xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="edu.cnm.deepdive.controller.MainController"
  stylesheets="@styles.css">

  <TextField
    fx:id="sourceFile"
    GridPane.rowIndex="0"
    GridPane.columnIndex="1"/>

  <Label
    id="source_label"
    text="%source_label"
    labelFor="$sourceFile"
    GridPane.rowIndex="0"
    GridPane.columnIndex="0"/>

  <Button
    fx:id="chooseSource"
    text="&#x2026;"
    GridPane.rowIndex="0"
    GridPane.columnIndex="2"
    onAction="#chooseSource"/>

  <TextField
    fx:id="targetFile"
    GridPane.rowIndex="1"
    GridPane.columnIndex="1"/>

  <Label
    id="target_label"
    text="%target_label"
    labelFor="$targetFile"
    GridPane.rowIndex="1"
    GridPane.columnIndex="0"/>

  <Button
    fx:id="chooseTarget"
    text="&#x2026;"
    GridPane.rowIndex="1"
    GridPane.columnIndex="2"
    onAction="#chooseTarget"/>

  <Button
    fx:id="convert"
    text="Convert"
    GridPane.rowIndex="2"
    GridPane.columnIndex="1"
    GridPane.halignment="CENTER"
    onAction="#convert"/>

</GridPane>